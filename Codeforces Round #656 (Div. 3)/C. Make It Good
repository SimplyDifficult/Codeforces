#include<bits/stdc++.h>
using namespace std;

#define ll long long
#define fo(i,n) for(int i=0;i<n;i++)

ll t,n,x,k;

int main(){

	#ifndef ONLINE_JUDGE
    freopen("input.txt", "r", stdin);
    freopen("output.txt", "w", stdout);
    #endif
 	
 	cin>>t;
 	while(t--){
 		cin>>n;
 		ll a[n];
 		fo(i,n)cin>>a[i];
 		int index=n-1;
 		for(int i=n-1;i>0;i--){
 			if(a[i-1]>=a[i])index--;
 			else break;
 		}
 		while(index>0){
 			if(a[index-1]<=a[index])index--;
 			else break;
 		}
 		cout<<index<<endl;
 	}


    cerr << "Time : " << 1000 * ((double)clock()) / (double)CLOCKS_PER_SEC << "ms\n";
    return 0;
}
